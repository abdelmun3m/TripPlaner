<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.abdelmun3m.tripplaner.registerActivity">


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ede7f6"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textAllCaps="?android:attr/textAppearanceLarge"
                    android:layout_gravity="center_horizontal"
                    android:text="User Registeration"

                    android:layout_marginTop="5dp"
                    android:textSize="25sp"
                    android:textColor="#ce93d8"

                    />

                <ImageView android:src="@drawable/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:scaleType="fitXY"
                    android:scaleX="0.5"
                    android:scaleY="0.5"/>


                <EditText
                    android:layout_marginLeft="15dp"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#ce93d8"
                    android:hint="Enter Your Email"
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"/>

                <EditText
                    android:layout_marginLeft="15dp"
                    android:inputType="textPassword"
                    android:hint="Enter Your Password"
                    android:textColorHint="#ce93d8"
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

                <Button
                    android:id="@+id/buttonRegister"
                    android:text="Register User"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#ce93d8"
                    android:textStyle="italic"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/buttonshape"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"

                    />

                <TextView
                    android:textAlignment="center"
                    android:text="Already Registered? Sign in here"
                    android:textColor="#ce93d8"
                    android:textStyle="italic"
                    android:id="@+id/textViewSignin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
