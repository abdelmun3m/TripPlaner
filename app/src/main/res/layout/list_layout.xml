<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/tripLabelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:shadowColor="@color/colorPrimary"
                android:text="@string/str_tripName"
                android:textColorLink="@color/colorPrimary" />

            <TextView
                android:id="@+id/tripName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="100dp"
                android:shadowColor="@color/colorPrimary"
                android:text="@string/str_tripName"
                android:textColorLink="@color/colorPrimary" />


            <TextView
                android:id="@+id/tripstrLabelPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripName"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_strpoint"
                android:textColorLink="@color/colorPrimary" />

            <TextView
                android:id="@+id/tripstrPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripName"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_strpoint"
                android:textColorLink="@color/colorPrimary" />


            <TextView
                android:id="@+id/tripLabelendPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripstrPoint"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_endpoint"
                android:textColorLink="@color/colorPrimary" />

            <TextView
                android:id="@+id/tripendPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripstrPoint"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_endpoint"
                android:textColorLink="@color/colorPrimary" />


            <TextView
                android:id="@+id/tripLabelDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripendPoint"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_dateTime"
                android:textColorLink="@color/colorPrimary" />


            <TextView
                android:id="@+id/tripDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripendPoint"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_dateTime"
                android:textColorLink="@color/colorPrimary" />


            <TextView
                android:id="@+id/tripLabelStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripDateTime"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_tripstatus"
                android:textColorLink="@color/colorPrimary" />


            <TextView
                android:id="@+id/tripStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripDateTime"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_tripstatus"
                android:textColorLink="@color/colorPrimary" />


            <TextView
                android:id="@+id/tripLabelDirStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripStatus"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_direction"
                android:textColorLink="@color/colorPrimary" />

            <TextView
                android:id="@+id/tripDirStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripStatus"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_direction"
                android:textColorLink="@color/colorPrimary" />

            <Button
                android:id="@+id/launchTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tripDirStatus"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_StartTrip" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>