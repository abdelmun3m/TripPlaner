<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="50dp"
        app:cardElevation="10dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tripLabelName"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="50dp"
                android:background="#b6060606"
                android:shadowColor="@color/colorPrimary"
                android:text="@string/str_tripName"
                android:textColor="#ffffff"
                android:textColorLink="@color/colorPrimary"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tripName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"

                android:layout_marginTop="50dp"
                android:shadowColor="@color/colorPrimary"
                android:text="@string/str_tripName"
                android:textColor="#a9eaed"
                android:textColorLink="@color/colorPrimary"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/tripstrLabelPoint"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripName"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="#b6060606"
                android:text="@string/str_strpoint"
                android:textColor="#ffffff"
                android:textColorLink="@color/colorPrimary"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tripstrPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripName"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_strpoint"
                android:textColor="#a9eaed"
                android:textColorLink="@color/colorPrimary"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/tripLabelendPoint"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripstrPoint"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="#b6060606"
                android:text="@string/str_endpoint"
                android:textColor="#ffffff"
                android:textColorLink="@color/colorPrimary"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tripendPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripstrPoint"
                android:layout_marginLeft="150dp"

                android:layout_marginTop="5dp"
                android:text="@string/str_endpoint"
                android:textColor="#a9eaed"
                android:textColorLink="@color/colorPrimary"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/tripLabelDateTime"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripendPoint"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="#b6060606"
                android:text="@string/str_dateTime"
                android:textColor="#ffffff"
                android:textColorLink="@color/colorPrimary"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/tripDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripendPoint"
                android:layout_marginLeft="150dp"

                android:layout_marginTop="5dp"
                android:text="@string/str_dateTime"
                android:textColor="#a9eaed"
                android:textColorLink="@color/colorPrimary"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/tripLabelStatus"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripDateTime"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="#b6060606"
                android:text="@string/str_tripstatus"
                android:textColor="#ffffff"
                android:textColorLink="@color/colorPrimary"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/tripStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripDateTime"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_tripstatus"
                android:textColor="#a9eaed"
                android:textColorLink="@color/colorPrimary"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/tripLabelDirStatus"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripStatus"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="#b6060606"
                android:text="@string/str_direction"
                android:textColor="#ffffff"
                android:textColorLink="@color/colorPrimary"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tripDirStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripStatus"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp"
                android:text="@string/str_direction"
                android:textColor="#a9eaed"
                android:textColorLink="@color/colorPrimary"
                android:textSize="25dp" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:weightSum="6"
               android:orientation="horizontal"
               android:layout_marginTop="400dp">


               <ImageView
                   android:id="@+id/editCard"
                   android:layout_width="0dp"
                   android:layout_weight="2"
                   android:layout_height="60dp"
                   android:src="@drawable/pencil"
                   />


               <Button
                   android:id="@+id/launchTrip"
                   android:layout_width="0dp"
                   android:layout_weight="2"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/tripDirStatus"
                   android:layout_centerHorizontal="true"
                   android:background="@drawable/buttonshape"
                   android:text="Start Trip"/>
                   />

               <ImageView
                   android:id="@+id/deletCard"
                   android:layout_width="0dp"
                   android:layout_weight="2"
                   android:layout_height="50dp"
                   android:src="@drawable/delete"/>


           </LinearLayout>
                    </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>